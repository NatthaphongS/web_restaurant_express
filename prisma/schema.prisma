// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  WAITINGPAYMENT
  WAITINGREVIEW
  COOKING
  WAITINGDELIVERY
  COMPLETE
  CANCLE
}

enum CatagoryMenu {
  MAIN
  DESSERT
  DRINK
}

enum MenuStatus {
  AVAILABLE
  OUTOFSTOCK
}

enum UserRole {
  MEMBER
  ADMIN
}

model User {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String?  @unique
  mobile    String   @unique
  address   String?
  password  String
  role      UserRole @default(MEMBER)
  orders    Order[]
}

model Order {
  id              Int           @id @default(autoincrement())
  deliveryAddress String
  summaryPrice    Decimal       @db.Decimal(10, 2)
  status          OrderStatus
  createAt        DateTime      @default(now())
  paymentAt       DateTime      @default(now())
  user            User          @relation(fields: [userId], references: [id])
  userId          Int
  orderDetails    OrderDetail[]
}

model OrderDetail {
  id      Int     @id @default(autoincrement())
  amount  Int
  price   Decimal @db.Decimal(10, 2)
  order   Order   @relation(fields: [orderId], references: [id])
  orderId Int
  menu    Menu    @relation(fields: [menuId], references: [id])
  menuId  Int
}

model Menu {
  id           Int           @id @default(autoincrement())
  menuName     String
  catagory     CatagoryMenu
  menuImage    String
  description  String?
  price        Decimal       @db.Decimal(10, 2)
  status       MenuStatus
  orderDetails OrderDetail[]
}
